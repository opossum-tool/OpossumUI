{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "helpers:pinGitHubActionDigests",
    ":automergeTypes",
    ":automergeLinters",
    ":automergeTesters",
    "monorepo:yarn"
  ],
  "addLabels": ["dependencies"],
  "automergeType": "branch",
  "prConcurrentLimit": 5,
  "prCreation": "not-pending",
  "rangeStrategy": "bump",
  "minimumReleaseAge": "3 days",
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Node.js version is driven by Electron - synced via sync-node-version workflow",
      "matchManagers": ["nvm"],
      "enabled": false
    },
    {
      "description": "Node.js version is driven by Electron - synced via sync-node-version workflow",
      "matchDepTypes": ["engines"],
      "matchPackageNames": ["node"],
      "enabled": false
    },
    {
      "description": "@types/node is synced to match Electron's bundled Node.js via sync-node-version workflow",
      "matchPackageNames": ["@types/node"],
      "enabled": false
    }
  ]
}
