{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: 'OpossumUI Renovate configuration',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':automergeTypes',
    ':automergeLinters',
    ':automergeTesters',
    'monorepo:yarn',
    'monorepo:nivo',
  ],
  addLabels: ['dependencies'],
  automergeType: 'branch',
  prConcurrentLimit: 5,
  prCreation: 'not-pending',
  rangeStrategy: 'bump',
  minimumReleaseAge: '1 day',
  nvm: {
    enabled: false,
  },
  packageRules: [
    {
      matchPackageNames: ['react-virtuoso'],
      enabled: false,
    },
    {
      matchPackageNames: [
        '@faker-js/faker',
        '@playwright/test',
        '@trivago/prettier-plugin-sort-imports',
        'babel-jest',
        'babel-plugin-transform-import-meta',
        'compare-versions',
        'cross-env',
        'dayjs',
        'dotenv',
        'electron',
        'electron-builder',
        'electron-log',
        'electron-playwright-helpers',
        'electron-settings',
        'eslint',
        'fast-csv',
        'fflate',
        'husky',
        'js-yaml',
        'jsonschema',
        'lint-staged',
        'lodash',
        'mkdirp',
        'mockdate',
        'nunjucks',
        'object-hash',
        'packageurl-js',
        'prettier',
        'prop-types',
        'proxy-memoize',
        're-resizable',
        'react-error-boundary',
        'react-hot-toast',
        'react-hotkeys-hook',
        'recharts',
        'run-script-os',
        'spdx-license-ids',
        'start-server-and-test',
        'stream-json',
        'typescript',
        'typescript-eslint',
        'upath',
        'uuid',
        'whatwg-fetch',
        '@testing-library/{/,}**',
        'eslint-{/,}**',
        '@eslint/{/,}**',
        '@babel/{/,}**',
      ],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackageNames: ['node'],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      groupName: 'commitlint dependencies',
      groupSlug: 'commitlint',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
      matchPackageNames: ['@commitlint/{/,}**'],
    },
    {
      groupName: 'MUI dependencies',
      groupSlug: 'mui',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
      matchPackageNames: ['@mui/{/,}**'],
    },
    {
      groupName: 'Emotion dependencies',
      groupSlug: 'emotion',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
      matchPackageNames: ['@emotion/{/,}**'],
    },
    {
      groupName: 'fontsource dependencies',
      groupSlug: 'fontsource',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
      matchPackageNames: ['@fontsource-variable/{/,}**'],
    },
    {
      groupName: 'Tanstack dependencies',
      groupSlug: 'tanstack',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
      matchPackageNames: ['@tanstack/{/,}**'],
    },
    {
      matchPackageNames: ['react', 'react-dom'],
      groupName: 'React dependencies',
      groupSlug: 'react',
    },
    {
      matchPackageNames: ['@reduxjs/toolkit', 'react-redux'],
      groupName: 'Redux dependencies',
      groupSlug: 'redux',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackageNames: ['vite', '@vitejs/{/,}**', 'vite-{/,}**'],
      groupName: 'Vite dependencies',
      groupSlug: 'vite',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackageNames: ['jest', 'babel-jest', 'jest-{/,}**'],
      groupName: 'Jest dependencies',
      groupSlug: 'jest',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      description: 'Ignore "engines" field in package.json',
      matchDepTypes: ['engines'],
      enabled: false,
    },
    {
      description: 'Ignore ubuntu dependency as ubuntu v24 does is not compatible with app image and electron',
      matchDepTypes: ['ubuntu'],
      enabled: false,
    },
  ],
}
