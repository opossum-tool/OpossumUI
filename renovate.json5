{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: 'OpossumUI Renovate configuration',
  extends: [
    'config:base',
    ':dependencyDashboard',
    ':automergeTypes',
    ':automergeLinters',
    ':automergeTesters',
  ],
  postUpdateOptions: ['yarnDedupeHighest'],
  addLabels: ['dependencies'],
  automergeType: 'branch',
  prConcurrentLimit: 5,
  prCreation: 'not-pending',
  rangeStrategy: 'bump',
  minimumReleaseAge: '1 day',
  packageRules: [
    {
      matchPackagePrefixes: ['@testing-library/', 'eslint-', '@babel/'],
      matchPackageNames: [
        '@faker-js/faker',
        '@playwright/test',
        '@trivago/prettier-plugin-sort-imports',
        'axios',
        'axios-mock-adapter',
        'babel-jest',
        'babel-plugin-transform-import-meta',
        'buffer',
        'compare-versions',
        'cross-env',
        'dayjs',
        'electron-devtools-installer',
        'electron-is-dev',
        'electron-log',
        'electron-playwright-helpers',
        'electron-settings',
        'eslint',
        'fast-csv',
        'fflate',
        'husky',
        'js-yaml',
        'jsonschema',
        'lint-staged',
        'lodash',
        'mkdirp',
        'mockdate',
        'nunjucks',
        'object-hash',
        'prettier',
        'proxy-memoize',
        'run-script-os',
        'spdx-license-ids',
        'start-server-and-test',
        'stream-json',
        'typescript',
        'upath',
        'url',
        'uuid',
      ],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackageNames: ['yarn'],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackagePrefixes: ['@typescript-eslint/'],
      groupName: 'TypeScript ESLint dependencies',
      groupSlug: 'typescript-eslint',
      automerge: true,
    },
    {
      matchPackagePrefixes: ['@mui/'],
      groupName: 'MUI dependencies',
      groupSlug: 'mui',
    },
    {
      matchPackagePrefixes: ['@emotion/'],
      groupName: 'Emotion dependencies',
      groupSlug: 'emotion',
    },
    {
      matchPackagePrefixes: ['@tanstack/'],
      groupName: 'Tanstack dependencies',
      groupSlug: 'tanstack',
    },
    {
      matchPackageNames: ['react', 'react-dom'],
      groupName: 'React dependencies',
      groupSlug: 'react',
    },
    {
      matchPackageNames: ['@reduxjs/toolkit', 'react-redux'],
      groupName: 'Redux dependencies',
      groupSlug: 'redux',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackagePrefixes: ['@vitejs/', 'vite-'],
      matchPackageNames: ['vite'],
      groupName: 'Vite dependencies',
      groupSlug: 'vite',
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackagePrefixes: ['jest-'],
      matchPackageNames: ['jest', 'babel-jest'],
      groupName: 'Jest dependencies',
      groupSlug: 'jest',
      automerge: true,
    },
    {
      description: 'Ignore "engines" field in package.json',
      matchDepTypes: ['engines'],
      enabled: false,
    },
  ],
}
